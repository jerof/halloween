<%= simple_form_for @post, :html => { :multipart => true } do |f| %>
  <%= select_tag(:location_id, options_for_select(@locations), :prompt => "Select a location") %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :image, as: :file %>
  <%= f.button :submit, class: "btn btn-lg btn-primary" %>
<% end %>
